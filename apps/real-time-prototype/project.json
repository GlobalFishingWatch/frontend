{
  "name": "real-time-prototype",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/real-time-prototype",
  "projectType": "application",
  "targets": {
    "build-deps": {
      "executor": "nx:noop",
      "dependsOn": ["^dist"]
    },
    "watch-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx watch --projects real-time-prototype --includeDependentProjects -- nx run-many -t build -p \\$NX_PROJECT_NAME --exclude=real-time-prototype"
      },
      "continuous": true
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build real-time-prototype --parallel"],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/real-time-prototype"
      },
      "configurations": {
        "production": {}
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-deps"],
      "options": {
        "commands": [
          "nx serve real-time-prototype --hostname=0.0.0.0",
          "nx watch-deps real-time-prototype"
        ],
        "parallel": true
      },
      "continuous": true
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "real-time-prototype:build",
        "dev": true,
        "port": 3000
      },
      "configurations": {
        "production": {
          "buildTarget": "real-time-prototype:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "real-time-prototype:build:production"
      }
    },
    "docker-prepare": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "cp config/entrypoint.sh dist/apps/real-time-prototype",
          "cp apps/real-time-prototype/nginx.conf dist/apps/real-time-prototype"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project apps/real-time-prototype/tsconfig.json"
      }
    },
    "typecheck-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --watch --project apps/real-time-prototype/tsconfig.json"
      },
      "continuous": true
    }
  },
  "tags": ["app"]
}
