{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "@vitest/browser/matchers",
      "next",
      "@vitest/browser-playwright",
      "vitest-browser-react",
      "vitest"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "incremental": true,
    "strictNullChecks": true,
    // generating source maps for debug ids for Sentry.
    "sourceMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../dist/apps/fishing-map/.next/types/**/*.ts",
    "eslint.config.js",
    "types/**/*.d.ts",
    "features/**/*.d.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    ".next",
    "exported",
    "**/resources.d.ts",
    "**/i18n.types.d.ts",
    "**/__traces__/**"
  ],
  "references": [
    {
      "path": "../../libs/api-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api-types/tsconfig.lib.json"
    },
    {
      "path": "../../libs/data-transforms/tsconfig.lib.json"
    },
    {
      "path": "../../libs/datasets-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/dataviews-client/tsconfig.lib.json"
    },
    {
      "path": "../../libs/deck-layer-composer/tsconfig.lib.json"
    },
    {
      "path": "../../libs/deck-layers/tsconfig.lib.json"
    },
    {
      "path": "../../libs/deck-loaders/tsconfig.lib.json"
    },
    {
      "path": "../../libs/i18n-labels/tsconfig.lib.json"
    },
    {
      "path": "../../libs/ocean-areas/tsconfig.lib.json"
    },
    {
      "path": "../../libs/pbf-decoders/tsconfig.lib.json"
    },
    {
      "path": "../../libs/react-hooks/tsconfig.lib.json"
    },
    {
      "path": "../../libs/responsive-visualizations/tsconfig.lib.json"
    },
    {
      "path": "../../libs/timebar/tsconfig.lib.json"
    },
    {
      "path": "../../libs/ui-components/tsconfig.lib.json"
    }
  ]
}
