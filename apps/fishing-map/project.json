{
  "name": "fishing-map",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/fishing-map",
  "projectType": "application",
  "tags": ["app"],
  "targets": {
    "watch-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx watch --projects=fishing-map --includeDependentProjects -- nx run-many -t build -p \\$NX_PROJECT_NAME --exclude=fishing-map"
      },
      "continuous": true
    },
    "prepare-start": {
      "executor": "nx:run-commands",
      "dependsOn": ["clean-next", "prepare-loaders", "i18n-labels:serve"],
      "options": {
        "commands": ["nx run fishing-map:i18n:watch"],
        "parallel": false
      },
      "continuous": true
    },
    "prepare-loaders": {
      "executor": "nx:run-commands",
      "dependsOn": ["deck-loaders:dist:workers"],
      "inputs": ["default", "{workspaceRoot}/libs/deck-loaders/dist/workers/*.js"],
      "outputs": ["{projectRoot}/public/workers"],
      "options": {
        "commands": [
          "make-dir apps/fishing-map/public/workers",
          "shx cp libs/deck-loaders/dist/workers/*.js apps/fishing-map/public/workers/"
        ],
        "parallel": false
      }
    },
    "clean-output": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": ["rimraf apps/fishing-map/output"]
      }
    },
    "i18n": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "{projectRoot}/{data,features,hooks,pages,routes,router,server,types,utils}/**/*.{js,jsx,ts,tsx}",
        "{projectRoot}/i18next.config.ts",
        "!{projectRoot}/**/*.test.{js,jsx,ts,tsx}",
        "!{projectRoot}/**/*.spec.{js,jsx,ts,tsx}",
        "!{projectRoot}/**/test-results/**",
        "!{projectRoot}/**/__traces__/**"
      ],
      "outputs": [
        "{projectRoot}/public/locales",
        "{projectRoot}/features/i18n/i18next.d.ts",
        "{projectRoot}/features/i18n/i18n.types.d.ts"
      ],
      "options": {
        "commands": ["nx i18n:extract fishing-map", "nx i18n:types fishing-map"],
        "parallel": false
      }
    },
    "i18n:watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn i18n:extract:watch", "yarn i18n:types:watch"],
        "parallel": true
      },
      "continuous": true
    },
    "start": {
      "dependsOn": ["prepare-start"],
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "fishing-map:build",
        "port": 3003
      },
      "configurations": {
        "development": {
          "buildTarget": "fishing-map:build:development"
        },
        "production": {
          "buildTarget": "fishing-map:build:production"
        }
      }
    },
    "serve": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "command": "node .output/server/index.mjs",
        "cwd": "apps/fishing-map"
      }
    },
    "proxy": {
      "executor": "nx:run-commands",
      "dependsOn": [],
      "options": {
        "commands": [
          "local-ssl-proxy --key local.globalfishingwatch.org-key.pem --cert local.globalfishingwatch.org.pem --source 443 --target 3003"
        ]
      },
      "continuous": true
    },
    "start-proxy": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-start"],
      "options": {
        "commands": ["nx run fishing-map:start", "nx run fishing-map:proxy"],
        "parallel": true
      },
      "continuous": true
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/output"],
      "defaultConfiguration": "production",
      "dependsOn": ["^build", "i18n", "prepare-loaders", "clean-output"],
      "options": {
        "command": "vite build",
        "cwd": "apps/fishing-map"
      },
      "configurations": {
        "development": {
          "command": "vite build --mode development"
        },
        "production": {
          "command": "vite build --mode production"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": ["{workspaceRoot}/coverage/apps/fishing-map"],
      "options": {
        "command": "vitest run --config=vitest.config.mts",
        "cwd": "apps/fishing-map"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config=vitest.config.mts",
        "cwd": "apps/fishing-map"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config=vitest.config.mts --watch",
        "cwd": "apps/fishing-map"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project apps/fishing-map/tsconfig.json"
      }
    },
    "typecheck-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --watch --project apps/fishing-map/tsconfig.json"
      },
      "continuous": true
    }
  }
}
