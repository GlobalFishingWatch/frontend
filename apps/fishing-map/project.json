{
  "name": "fishing-map",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/fishing-map",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build-deps": {
      "dependsOn": ["^dist"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build fishing-map"],
        "parallel": false
      }
    },
    "build:app": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/fishing-map"
      },
      "configurations": {
        "production": {}
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build", "i18n", "prepare-loaders"],
      "inputs": ["production", "^production"],
      "outputs": ["{workspaceRoot}/dist/apps/fishing-map"],
      "options": {
        "commands": ["nx clean-next fishing-map", "nx build:app fishing-map"],
        "parallel": false
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-deps", "clean-locales", "prepare-loaders"],
      "options": {
        "commands": [
          "nx run i18n-labels:ts",
          "nx run fishing-map:i18n:extract:watch",
          "nx run fishing-map:i18n:types:watch",
          "nx serve i18n-labels",
          "nx serve fishing-map --hostname=0.0.0.0",
          "nx watch-deps fishing-map"
        ],
        "parallel": true
      },
      "continuous": true
    },
    "prepare-loaders": {
      "executor": "nx:run-commands",
      "dependsOn": ["deck-loaders:dist:workers"],
      "inputs": ["default", "{workspaceRoot}/libs/deck-loaders/dist/workers/**"],
      "outputs": ["{projectRoot}/public/workers"],
      "options": {
        "commands": [
          "make-dir apps/fishing-map/public/workers",
          "shx cp -R libs/deck-loaders/dist/workers/. apps/fishing-map/public/workers/ || true"
        ],
        "parallel": false
      }
    },
    "clean-locales": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": ["rimraf dist/apps/fishing-map/public/locales"]
      }
    },
    "clean-next": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": ["rimraf dist/apps/fishing-map", "rimraf .next"]
      }
    },
    "i18n": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["production"],
      "outputs": [
        "{projectRoot}/public/locales",
        "{projectRoot}/features/i18n/i18next.d.ts",
        "{projectRoot}/features/i18n/i18n.types.d.ts"
      ],
      "options": {
        "commands": ["nx i18n:extract fishing-map", "nx i18n:types fishing-map"],
        "parallel": false
      }
    },
    "prepare-serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf server",
          "make-dir ./server && make-dir server/apps/fishing-map/public && make-dir server/dist/apps/fishing-map/.next/static",
          "cp -rp ./dist/apps/fishing-map/public/* ./server/apps/fishing-map/public/",
          "cp -rp ./dist/apps/fishing-map/.next/standalone/* ./server/",
          "cp -rp ./dist/apps/fishing-map/.next/static/* ./server/dist/apps/fishing-map/.next/static/"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "fishing-map:build",
        "dev": true,
        "port": 3003
      },
      "configurations": {
        "production": {
          "buildTarget": "fishing-map:build:production",
          "dev": false
        }
      }
    },
    "serve:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node ./server/apps/fishing-map/server.js"],
        "parallel": false
      }
    },
    "prepare:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build fishing-map --parallel", "nx prepare-serve fishing-map"],
        "parallel": false
      }
    },
    "build-serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx prepare:build fishing-map", "nx serve:build fishing-map"],
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": ["{workspaceRoot}/coverage/apps/fishing-map"],
      "options": {
        "command": "vitest run --config=vitest.config.mts",
        "cwd": "apps/fishing-map"
      }
    }
  }
}
