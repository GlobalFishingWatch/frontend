{
  "name": "fishing-map",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/fishing-map",
  "projectType": "application",
  "tags": [],
  "targets": {
    "watch-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx watch --projects=fishing-map --includeDependentProjects -- nx build \\$NX_PROJECT_NAME --exclude=fishing-map"
      },
      "continuous": true
    },
    "prepare-start": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build-deps",
        "clean-next",
        "prepare-loaders",
        "i18n-labels:ts",
        "i18n-labels:serve"
      ],
      "options": {
        "commands": ["nx run fishing-map:i18n:watch"],
        "parallel": false
      },
      "continuous": true
    },
    "prepare-loaders": {
      "executor": "nx:run-commands",
      "dependsOn": ["deck-loaders:build:workers"],
      "inputs": ["default", "{workspaceRoot}/libs/deck-loaders/dist/workers/**"],
      "outputs": ["{projectRoot}/public/workers"],
      "options": {
        "commands": [
          "make-dir apps/fishing-map/public/workers",
          "shx cp -R libs/deck-loaders/dist/workers/**/*.js apps/fishing-map/public/workers/ || true"
        ],
        "parallel": false
      }
    },
    "clean-next": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "rimraf dist/apps/fishing-map/public/locales",
          "rimraf dist/apps/fishing-map",
          "rimraf .next"
        ]
      }
    },
    "i18n": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["production"],
      "outputs": [
        "{projectRoot}/public/locales",
        "{projectRoot}/features/i18n/i18next.d.ts",
        "{projectRoot}/features/i18n/i18n.types.d.ts"
      ],
      "options": {
        "commands": ["nx i18n:extract fishing-map", "nx i18n:types fishing-map"],
        "parallel": false
      }
    },
    "i18n:watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn i18n:extract:watch", "yarn i18n:types:watch"],
        "parallel": true
      },
      "continuous": true
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "fishing-map:build",
        "dev": true,
        "port": 3003
      },
      "configurations": {
        "production": {
          "buildTarget": "fishing-map:build:production",
          "dev": false
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["prepare-start"],
      "options": {
        "commands": ["nx run fishing-map:serve", "nx run fishing-map:watch-deps"],
        "parallel": true
      },
      "continuous": true
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{workspaceRoot}/dist/apps/fishing-map"],
      "dependsOn": ["build-deps", "i18n", "prepare-loaders", "clean-next"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/fishing-map"
      },
      "configurations": {
        "production": {}
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": ["default", "^production"],
      "outputs": ["{workspaceRoot}/coverage/apps/fishing-map"],
      "options": {
        "command": "vitest run --config=vitest.config.mts",
        "cwd": "apps/fishing-map"
      }
    }
  }
}
