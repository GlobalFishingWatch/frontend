{
  "name": "api-portal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-portal",
  "projectType": "application",
  "targets": {
    "changelog": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./changelog.sh api-portal \"API Portal\""],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx build api-portal --parallel"],
        "parallel": false
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/api-portal",
        "outputPath": "dist/apps/api-portal"
      },
      "configurations": {
        "production": {}
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx serve api-portal"],
        "parallel": true
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "api-portal:build",
        "dev": true,
        "port": 3003
      },
      "configurations": {
        "production": {
          "buildTarget": "api-portal:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "api-portal:build:production"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api-portal/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/api-portal"],
      "options": {
        "jestConfig": "apps/api-portal/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
