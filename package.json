{
  "name": "@globalfishingwatch/frontend",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:GlobalFishingWatch/frontend.git",
  "author": "satellitestudio <contact@satellitestud.io>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*",
      "linting"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**",
      "**/babel**"
    ]
  },
  "scripts": {
    "start:sandbox": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/sandbox start",
    "start:dataviews": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/dataviews-editor start",
    "start:packages": "lerna run start --parallel --scope @globalfishingwatch/*",
    "build": "lerna run build --scope @globalfishingwatch/*",
    "changelog": "lerna-changelog",
    "release": "lerna publish && yarn changelog",
    "clean": "lerna clean && rm -rf node_modules && rm yarn.lock && yarn"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "mapbox-gl": "^1.10.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-map-gl": "https://github.com/GlobalFishingWatch/react-map-gl.git#build"
  },
  "devDependencies": {
    "@lerna/project": "^3.21.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@svgr/rollup": "^5.4.0",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.151",
    "@types/mapbox-gl": "^1.10.1",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-redux": "^7.1.8",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^2.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.2",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "stylelint": "^13.3.3",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "tslib": "^1.11.1",
    "typescript": "^3.9.3",
    "typescript-plugin-css-modules": "^2.3.0"
  },
  "peerDependencies": {
    "@globalfishingwatch/api-client": "*",
    "@globalfishingwatch/dataviews-client": "*",
    "@globalfishingwatch/layer-composer": "*",
    "@globalfishingwatch/react-hooks": "*",
    "@globalfishingwatch/ui-components": "*",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --syntax=scss --fix"
    ]
  }
}
