{
  "name": "@globalfishingwatch/frontend",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:GlobalFishingWatch/frontend.git",
  "author": "satellitestudio <contact@satellitestud.io>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*",
      "linting"
    ],
    "nohoist": []
  },
  "scripts": {
    "start:sandbox": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/sandbox start",
    "start:vessel-history": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/vessel-history start",
    "start:dataviews": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/dataviews-editor start",
    "start:temporalgrid-demo": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/temporalgrid-demo start",
    "start:fishing-map": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/fishing-map start",
    "start:amathea": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/amathea start",
    "start:packages": "lerna run start --parallel --scope @globalfishingwatch/*",
    "build": "lerna run build --scope @globalfishingwatch/*",
    "test": "lerna run test --scope @globalfishingwatch/*",
    "test:prepare": "lerna run prepare --scope @globalfishingwatch/*",
    "test:vessel-history": "cross-env lerna run test --scope @globalfishingwatchapp/vessel-history",
    "changesets": "yarn changeset && yarn changeset version",
    "release": "lerna publish",
    "release:ci": "yarn test:prepare && lerna publish from-package -y --no-verify-access --ignore-scripts",
    "clean": "lerna clean && rm -rf node_modules && rm yarn.lock && yarn",
    "clean:packages": "lerna run clean --parallel --scope @globalfishingwatch/*"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@lerna/project": "^3.21.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@rollup/plugin-url": "^5.0.1",
    "@svgr/rollup": "^5.4.0",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.159",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.6.1",
    "autoprefixer": "^9.8.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "7.12.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.2",
    "mkdir": "^0.0.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^2.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.1",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2",
    "typescript-plugin-css-modules": "^2.3.0"
  },
  "peerDependencies": {
    "@globalfishingwatch/api-client": "*",
    "@globalfishingwatch/dataviews-client": "*",
    "@globalfishingwatch/layer-composer": "*",
    "@globalfishingwatch/react-hooks": "*",
    "@globalfishingwatch/ui-components": "*",
    "@globalfishingwatch/fourwings-aggregate": "*",
    "react": "^7.0.1",
    "react-dom": "^17.0.1"
  },
  "resolutions": {
    "**/babel-loader": "8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix --resolve-plugins-relative-to ."
    ],
    "*.css": [
      "stylelint --fix",
      "stylelint --syntax=scss --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --syntax=scss --fix"
    ]
  }
}
