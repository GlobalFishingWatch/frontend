{
  "name": "@globalfishingwatch/frontend",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:GlobalFishingWatch/frontend.git",
  "author": "satellitestudio <contact@satellitestud.io>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "applications/*",
      "linting"
    ],
    "nohoist": []
  },
  "scripts": {
    "start:sandbox": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/sandbox start",
    "start:vessel-history": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/vessel-history start",
    "start:dataviews": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/dataviews-editor start",
    "start:temporalgrid-demo": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/temporalgrid-demo start",
    "start:tile-inspector": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/tile-inspector start",
    "start:fishing-map": "cross-env CI=true SKIP_PREFLIGHT_CHECK=true lerna run --scope @globalfishingwatchapp/fishing-map start",
    "start:packages": "lerna run start --parallel --scope @globalfishingwatch/*",
    "build": "lerna run build --scope @globalfishingwatch/*",
    "test": "lerna run test --scope @globalfishingwatch/*",
    "test:prepare": "lerna run prepare --scope @globalfishingwatch/*",
    "test:vessel-history": "cross-env lerna run test --scope @globalfishingwatchapp/vessel-history",
    "changesets": "yarn changeset && yarn changeset version",
    "release": "lerna publish",
    "release:prepare": "lerna run --scope @globalfishingwatch/data-transforms build",
    "release:ci": "yarn release:prepare && lerna publish from-package -y --no-verify-access",
    "clean": "lerna clean && rm -rf node_modules && rm yarn.lock && yarn",
    "clean:packages": "lerna run clean --parallel --scope @globalfishingwatch/*"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.8",
    "@changesets/cli": "^2.14.1",
    "@lerna/project": "^3.21.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cross-env": "^7.0.3",
    "eslint": "7.12.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.2",
    "mkdir": "^0.0.2",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.0",
    "prettier-eslint": "^12.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.11.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "typescript-plugin-css-modules": "^2.3.0"
  },
  "peerDependencies": {
    "@globalfishingwatch/api-client": "*",
    "@globalfishingwatch/api-types": "*",
    "@globalfishingwatch/data-transforms": "*",
    "@globalfishingwatch/dataviews-client": "*",
    "@globalfishingwatch/fourwings-aggregate": "*",
    "@globalfishingwatch/layer-composer": "*",
    "@globalfishingwatch/ocean-areas": "*",
    "@globalfishingwatch/pbf-decoders": "*",
    "@globalfishingwatch/react-hooks": "*",
    "@globalfishingwatch/ui-components": "*",
    "react": "^7.0.1",
    "react-dom": "^17.0.1"
  },
  "resolutions": {
    "**/babel-loader": "8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint -c ./.eslintrc.js --fix --resolve-plugins-relative-to ."
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --syntax=scss --fix"
    ]
  }
}