{
  "name": "responsive-visualizations",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/responsive-visualizations/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          { "glob": "**/*.css", "input": "libs/responsive-visualizations/src", "output": "." }
        ]
      }
    },
    "dev": {
      "dependsOn": ["^dev"],
      "executor": "@nx/js:tsc",
      "cache": false,
      "options": {
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "libs/responsive-visualizations"
      }
    }
  }
}
