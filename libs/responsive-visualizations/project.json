{
  "name": "responsive-visualizations",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/responsive-visualizations/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          { "glob": "**/*.css", "input": "libs/responsive-visualizations/src", "output": "." }
        ]
      }
    },
    "dev": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run responsive-visualizations:build",
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/responsive-visualizations"
      }
    }
  }
}
