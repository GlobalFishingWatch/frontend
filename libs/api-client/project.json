{
  "name": "api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api-client/src",
  "projectType": "library",
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/api-client",
        "main": "libs/api-client/src/index.ts",
        "tsConfig": "libs/api-client/tsconfig.lib.json",
        "assets": [
          {
            "input": "libs/api-client",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "libs/api-client",
            "glob": "README.md",
            "output": "."
          }
        ],
        "rootDir": "libs/api-client/src"
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "dist/libs/api-client"
      }
    }
  },
  "tags": []
}
