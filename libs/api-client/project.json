{
  "name": "api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/api-client/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc"
    },
    "dev": {
      "dependsOn": ["^dev"],
      "executor": "@nx/js:tsc",
      "cache": false,
      "options": {
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "libs/api-client"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "command": "vitest run --config=vitest.config.mts",
        "reportsDirectory": "../../coverage/libs/api-client"
      }
    },
    "test:watch": {
      "executor": "@nx/vitest:test",
      "cache": false,
      "options": {
        "configFile": "libs/api-client/vitest.config.mts",
        "watch": true
      },
      "continuous": true
    }
  }
}
