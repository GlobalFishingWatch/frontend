{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/data/**/*.json", "src/locales/**/*.json"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/source/**/*", "src/scripts/**/*"]
}
