{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": ["source/**/*.json", "index.ts", "./types.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
