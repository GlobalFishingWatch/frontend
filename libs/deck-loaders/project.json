{
  "name": "deck-loaders",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/deck-loaders/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc"
    },
    "dev": {
      "dependsOn": ["^dev"],
      "executor": "@nx/js:tsc",
      "cache": false,
      "options": {
        "watch": true
      },
      "continuous": true
    },
    "dist:workers": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build:workers deck-loaders",
          "node libs/deck-loaders/scripts/clean-workers-output.mjs"
        ],
        "parallel": false
      }
    },
    "build:workers": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}", "{options.outputPath}/src"],
      "options": {
        "main": "libs/deck-loaders/src/**/workers/**.ts",
        "esbuildOptions": {
          "outdir": "libs/deck-loaders/dist/workers",
          "format": "iife",
          "define": {
            "import.meta.env": "\"{}\""
          }
        },
        "outputPath": "libs/deck-loaders/dist/workers",
        "generateExportsField": true,
        "tsConfig": "libs/deck-loaders/tsconfig.workers.json",
        "watch": false,
        "target": "esnext",
        "platform": "browser",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "generatePackageJson": false,
        "minify": true
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist", "dist:workers"],
      "options": {
        "packageRoot": "libs/deck-loaders"
      }
    }
  }
}
