{
  "name": "deck-loaders",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/deck-loaders/src",
  "projectType": "library",
  "targets": {
    "generate-version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node libs/deck-loaders/scripts/generate-version.mjs"
      }
    },
    "dist": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["generate-version"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/deck-loaders/dist",
        "generatePackageJson": false,
        "main": "libs/deck-loaders/src/index.ts",
        "tsConfig": "libs/deck-loaders/tsconfig.lib.json",
        "rootDir": "libs/deck-loaders/src"
      }
    },
    "dist:workers": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build:workers deck-loaders",
          "rimraf libs/deck-loaders/dist/workers/libs",
          "rimraf libs/deck-loaders/dist/workers/package.json"
        ],
        "parallel": false
      }
    },
    "build:workers": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}", "{options.outputPath}/src"],
      "options": {
        "main": "libs/deck-loaders/src/**/workers/**.ts",
        "esbuildOptions": {
          "outdir": "libs/deck-loaders/dist/workers"
        },
        "outputPath": "libs/deck-loaders/dist/workers",
        "generateExportsField": true,
        "tsConfig": "libs/deck-loaders/tsconfig.workers.json",
        "watch": false,
        "target": "esnext",
        "platform": "browser",
        "deleteOutputPath": true,
        "bundle": true,
        "thirdParty": true,
        "generatePackageJson": false,
        "minify": true
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist", "dist:workers"],
      "options": {
        "packageRoot": "libs/deck-loaders"
      }
    }
  },
  "tags": []
}
