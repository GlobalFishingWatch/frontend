{
  "name": "timebar",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/timebar/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [{ "glob": "**/*.css", "input": "libs/timebar/src", "output": "." }]
      }
    },
    "dev": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run timebar:build",
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/timebar"
      }
    }
  }
}
