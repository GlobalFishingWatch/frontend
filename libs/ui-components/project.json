{
  "name": "ui-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/ui-components",
        "main": "libs/ui-components/src/index.ts",
        "tsConfig": "libs/ui-components/tsconfig.lib.json",
        "assets": [
          {
            "input": "libs/ui-components",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "libs/ui-components",
            "glob": "README.md",
            "output": "."
          },
          {
            "glob": "**/*.css",
            "input": "libs/ui-components/src",
            "output": "."
          },
          {
            "glob": "**/*.svg",
            "input": "libs/ui-components/src",
            "output": "."
          },
          {
            "glob": "**/*.{jpg,jpeg,png,gif,webp}",
            "input": "libs/ui-components/src",
            "output": "."
          }
        ],
        "rootDir": "libs/ui-components/src"
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": [
        "dist-package"
      ],
      "options": {
        "packageRoot": "dist/libs/ui-components"
      }
    },
    "dist-package": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "dist"
      ],
      "outputs": [
        "{workspaceRoot}/dist/libs/ui-components/package.json"
      ],
      "options": {
        "command": "node tools/scripts/generate-dist-package.mjs libs/ui-components dist/libs/ui-components"
      }
    }
  }
}
