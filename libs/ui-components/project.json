{
  "name": "ui-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui-components",
        "tsConfig": "libs/ui-components/tsconfig.lib.json",
        "project": "libs/ui-components/package.json",
        "extractCss": false,
        "entryFile": "libs/ui-components/src/index.ts",
        "external": [
          "react/jsx-runtime",
          "react",
          "react-dom",
          "@globalfishingwatch/layer-composer",
          "@globalfishingwatch/react-hooks",
          "luxon"
        ],
        "rollupConfig": "libs/ui-components/rollup.config.js",
        "assets": [
          {
            "glob": "libs/ui-components/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "libs/ui-components/src/header/html",
            "input": ".",
            "output": "."
          }
        ],
        "styles": "libs/ui-components/src/base.css",
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "prerender": {
      "executor": "nx:run-script",
      "options": {
        "script": "prerender"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ui-components/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/libs/ui-components"],
      "options": {
        "jestConfig": "libs/ui-components/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/libs/ui-components"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx prerender ui-components", "nx deploy ui-components"],
        "parallel": false
      }
    }
  }
}
