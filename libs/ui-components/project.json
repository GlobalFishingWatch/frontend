{
  "name": "ui-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-components/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/ui-components/dist",
        "generatePackageJson": false,
        "main": "libs/ui-components/src/index.ts",
        "tsConfig": "libs/ui-components/tsconfig.lib.json",
        "rootDir": "libs/ui-components/src",
        "assets": [
          {
            "glob": "**/*.css",
            "input": "libs/ui-components/src",
            "output": "."
          },
          {
            "glob": "**/*.svg",
            "input": "libs/ui-components/src",
            "output": "."
          },
          {
            "glob": "**/*.{jpg,jpeg,png,gif,webp}",
            "input": "libs/ui-components/src",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "libs/ui-components"
      }
    }
  }
}
