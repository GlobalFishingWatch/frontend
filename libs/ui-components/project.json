{
  "name": "ui-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-components/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": [
          { "glob": "**/*.css", "input": "libs/ui-components/src", "output": "." },
          { "glob": "**/*.svg", "input": "libs/ui-components/src", "output": "." },
          {
            "glob": "**/*.{jpg,jpeg,png,gif,webp}",
            "input": "libs/ui-components/src",
            "output": "."
          }
        ]
      }
    },
    "dev": {
      "dependsOn": ["^dist"],
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run ui-components:dist",
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "libs/ui-components"
      }
    }
  }
}
