{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": [
      "node"
    ]
  },
  "include": [
    "decoders/**/*.ts",
    "index.ts"
  ]
}
