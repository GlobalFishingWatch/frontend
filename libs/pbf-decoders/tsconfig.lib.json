{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "include": ["decoders/**/*.ts", "index.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
