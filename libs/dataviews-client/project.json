{
  "name": "dataviews-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/dataviews-client/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc"
    },
    "dev": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run dataviews-client:build",
        "watch": true
      },
      "continuous": true
    },
    "bundle-url-workspace": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/libs/dataviews-client/url-workspace-bundle"],
      "dependsOn": [],
      "options": {
        "commands": ["node libs/dataviews-client/esbuild.url.ts"],
        "cwd": "."
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "libs/dataviews-client"
      }
    }
  }
}
