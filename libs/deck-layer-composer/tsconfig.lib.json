{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"]
  },
  "references": [
    {
      "path": "../api-client/tsconfig.lib.json"
    },
    {
      "path": "../api-types/tsconfig.lib.json"
    },
    {
      "path": "../data-transforms/tsconfig.lib.json"
    },
    {
      "path": "../datasets-client/tsconfig.lib.json"
    },
    {
      "path": "../dataviews-client/tsconfig.lib.json"
    },
    {
      "path": "../deck-layers/tsconfig.lib.json"
    },
    {
      "path": "../deck-loaders/tsconfig.lib.json"
    },
    {
      "path": "../react-hooks/tsconfig.lib.json"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "vite.config.ts",
    "vitest.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
