{
  "name": "deck-layer-composer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/deck-layer-composer/src",
  "projectType": "library",
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/deck-layer-composer",
        "main": "libs/deck-layer-composer/src/index.ts",
        "tsConfig": "libs/deck-layer-composer/tsconfig.lib.json",
        "assets": [
          {
            "input": "libs/deck-layer-composer",
            "glob": "package.json",
            "output": "."
          },
          {
            "input": "libs/deck-layer-composer",
            "glob": "README.md",
            "output": "."
          }
        ],
        "rootDir": "libs/deck-layer-composer/src"
      }
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": [
        "dist-package"
      ],
      "options": {
        "packageRoot": "dist/libs/deck-layer-composer"
      }
    },
    "dist-package": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "dist"
      ],
      "outputs": [
        "{workspaceRoot}/dist/libs/deck-layer-composer/package.json"
      ],
      "options": {
        "command": "node tools/scripts/generate-dist-package.mjs libs/deck-layer-composer dist/libs/deck-layer-composer"
      }
    }
  },
  "tags": []
}
