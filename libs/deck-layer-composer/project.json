{
  "name": "deck-layer-composer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/deck-layer-composer/src",
  "projectType": "library",
  "tags": ["lib"],
  "targets": {
    "dist": {
      "executor": "@nx/js:tsc"
    },
    "dev": {
      "dependsOn": ["^dist"],
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run deck-layer-composer:dist",
        "watch": true
      },
      "continuous": true
    },
    "publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["dist"],
      "options": {
        "packageRoot": "libs/deck-layer-composer"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "command": "vitest run --config=vitest.config.mts",
        "reportsDirectory": "../../coverage/libs/deck-layer-composer"
      }
    }
  }
}
